<ul class="breadcrumb">
    <li><a href="/">Home</a> <span class="divider">/</span></li>
    <li><a href="<%- pathTo.clients %>">clients</a> <span class="divider">/</span></li>
    <li class="active"><a href="#">Details of client</a></li>
</ul>

<div class="page-header">
    <h1>Details of client</h1>
</div>

<table class="table table-bordered">
    <tbody>
        <tr><th>name</th><td><%= client.name %></td></tr>

        <tr><th>description</th><td><%= client.description %></td></tr>
    </tbody>
</table>

<div class="well">
    <%- link_to('<i class="icon-edit icon-white"></i> Edit', pathTo.edit_client(client), {class: 'btn btn-primary'}) %>
    <%- link_to('<i class="icon-remove icon-white"></i> Delete', pathTo.client(client), {class: 'btn btn-danger', method: 'delete', remote: true, jsonp: '(function (u) { location.href = u; })'}) %>
    or
    <%- link_to('Back to index', pathTo.clients) %>
</div>
